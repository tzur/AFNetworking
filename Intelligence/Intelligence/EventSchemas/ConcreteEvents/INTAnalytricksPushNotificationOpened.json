{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "App opened a push notification",
  "type": "object",
  "allOf": [
    {"$ref": "../AbstractEvents/INTAnalytricksBaseUsage.json"},
    {
      "properties": {
        "push_id": {
          "description": "push notification id",
          "type": "string"
        },
        "deep_link": {
          "description": "deep link within the push notification, if available",
          "type": ["string", "null"]
        },
        "push_source": {
        "description": "push notification source, i.e. 'Local', 'Remote'.",
        "type": "string"
        }
      },
      "required": ["push_id", "deep_link", "push_source"]
    }
  ]
}
