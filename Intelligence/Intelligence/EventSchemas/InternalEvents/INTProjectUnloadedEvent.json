{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Event marking a project unload",
  "properties": {
    "project_id": {
      "description": "Project ID",
      "type": "string",
      "pattern": "^[A-Fa-f0-9]{8}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{4}-[A-Fa-f0-9]{12}$"
    },
    "disk_space_on_unload": {
      "description": "Disk space allocated to the project in the moment of its unloading",
      "type": ["number", "null"]
    }
  },
  "required": ["project_id", "disk_space_on_unload"]
}
